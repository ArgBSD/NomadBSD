#!/bin/sh

# Stop here if nvidia.ko, radeonkms.ko, or amdgpu.ko is already loaded
kldstat | grep -E -q 'nvidia|radeonkms|amdgpu' && exit 1

config=$(pciconf -lv | grep ^vgapci | \
	sed -E 's#.* chip=0x([0-9a-z]{4})([0-9a-z]{4}).*$#\1:\2#')
for i in $config; do
	vendor=$(echo "$i" | cut -d: -f2)
	if [ "$vendor" = 8086 ]; then
		kldload /boot/modules/i915kms.ko
		exit 0
	fi
done
exit 1

